on:
  pull_request:
    paths:
      - 'terms.yaml'
  push:
    branches: [main]
    paths:
      - 'terms.yaml'

# ADD THIS PERMISSIONS BLOCK - This fixes the error!
permissions:
  contents: write
  pull-requests: write
  issues: write

jobs:
  validate-and-score:
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    steps:
      - uses: actions/checkout@v3
      
      - name: Setup Node
        uses: actions/setup-node@v3
        with:
          node-version: '18'
      
      - name: Install dependencies
        run: npm install js-yaml
      
      - name: Validate terms
        id: validat
        run: |
          node scripts/validateTerms.js
          echo "valid=$?" >> $GITHUB_OUTPUT
      
      - name: Score term
        id: score
        if: success()
        run: |
          node scripts/quickScore.js > output.txt
          cat output.txt
          echo "score=$(grep 'SCORE:' output.txt | cut -d: -f2)" >> $GITHUB_OUTPUT
          echo "badge=$(grep 'BADGE:' output.txt | cut -d: -f2-)" >> $GITHUB_OUTPUT
      
      - name: Comment on PR
        uses: actions/github-script@v6
        with:
          script: |
            const score = '${{ steps.score.outputs.score }}' || '0';
            const badge = '${{ steps.score.outputs.badge }}' || '';
            
            let body = '## 🎮 Term Review\n\n';
            body += '✅ **Validation Passed!**\n\n';
            body += `### Score: ${score}/100\n\n`;
            
            if (score >= 80) {
              body += '🔥 **AMAZING!** Top quality contribution!\n';
            } else if (score >= 60) {
              body += '💪 **Great job!** Solid contribution!\n';
            } else {
              body += '👍 **Good start!** Add humor or references for more points!\n';
            }
            
            if (badge) {
              body += `\n### 🏆 Achievements Unlocked!\n${badge}\n`;
            }
            
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: body
            });

  update-stats:
    runs-on: ubuntu-latest
    if: github.event_name == 'push'
    steps:
      - uses: actions/checkout@v3
        with:
          # This is important for pushing back
          token: ${{ secrets.GITH
